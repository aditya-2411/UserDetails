<style>
  body,
  html {
    margin: 0;
    padding: 0;
    height: 100%;
    background: #7abecc;
  }

  .details {
    width: 70%;
    margin-left: 15%;
    padding: 20px;
    background: #74cfbf;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
      0 6px 20px 0 rgba(0, 0, 0, 0.19);
    -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
      0 6px 20px 0 rgba(0, 0, 0, 0.19);
    border-radius: 5px;
  }

  h3 {
    text-align: center;
  }

  img {
    display: block;
    margin: auto;
  }

  p {
    border-bottom: 2px solid rgb(192, 191, 191);
    height: 45px;
    padding: 10px;
  }

  span {
    font-weight: 800;
    display: block;
    width: 40%;
    float: left;
    margin-inline-start: 10%;
  }

  .form {
    width: auto;
    float: left;
  }

  .edit {
    width: fit-content;
    margin: auto;
  }

  button {
    color: white;
    font-size: 20px;
    border-radius: 9px;
  }

  button:hover {
    cursor: pointer;
    font-size: 23px;
  }

  .btn {
    display: inherit;
  }

  @media only screen and (max-width: 650px) {
    .form {
      width: 50%;
    }
  }

  @media only screen and (max-width: 400px) {
    span {
      width: 90%;
    }
    p {
      height: auto;
      margin-inline-start: 10%;
    }
  }
</style>

<h3>USER DETAILS</h3>

<div class="details">
  <img
    src="/uploads/<%= image %>"
    onerror="this.src
  ='/images/dummy.jpg'"
    width="200px"
    height="200px"
    style="border-radius: 50%"
  />

  <form
    method="POST"
    class="edit"
    action="/image"
    enctype="multipart/form-data"
  >
    <div class="form-group">
      <input
        type="file"
        name="file"
        class="form-control form"
        style="margin-inline-end: 5px"
      />
      <input
        type="submit"
        name="submit"
        value="Upload"
        class="btn btn-primary"
      />
    </div>
  </form>
  <br />
  <p><span>NAME:</span> <%= name %></p>
  <p><span>MOBILE NUMBER:</span> <%= number %></p>
  <!-- <img src="dummy.jpg" /> -->

  <br />
  <form class="btn" action="/edit/<%= name %>" style="margin-bottom: 5px">
    <button class="btn-primary">Edit Details</button>
  </form>
  <form class="btn" action="/logout" method="POST">
    <button class="logout btn-primary">Logout</button>
  </form>
</div>
