<style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      background: #7abecc;
    }

    button {
    color: white;
    font-size: 20px;
    border-radius: 9px;
  }

  button:hover {
    cursor: pointer;
    font-size: 23px;
  }
</style>


<h3>EDIT DETAILS</h3>
<form action="/editdetails/<%= name %>" method="POST">
    <div>
        <label for="name"></label>
        <input type="text" id="name" name="name" autocomplete="off" placeholder="Name" required>
    </div>
    </br>
    <div>
        <label for="number"></label>
        <input type="number" id="number" name="number" autocomplete="off" placeholder="Mobile Number" required>
    </div>
    </br>
    <button class="btn-primary">Edit</button>
</form>
